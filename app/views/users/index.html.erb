<div class="jumbotron text-center">
  <h2>People</h2>
  <div class="btn-group" role="group" aria-label="Default Button Groups">
    <%= link_to "Everyone", users_path, class: "btn btn-default #{'active' unless params[:people]}" %>
    <%= link_to "Friends", users_path(people: "friends"), class: "btn btn-default #{'active' if params[:people] == 'friends'}" %>
    <%= link_to "Requests", users_path(people: "requests"), class: "btn btn-default #{'active' if params[:people] == 'friends'}" %>
    <%= link_to "Pending", users_path(people: "pending"), class: "btn btn-default #{'active' if params[:people] == 'friends'}" %>

  </div>
  </div>

  <div class="container">
  <div class="row">

  <%= render @users %>

  </div>
  </div>

